import unittest
from app import app

class FlaskAppTestCase(unittest.TestCase):

    def setUp(self):
        # 创建一个测试客户端
        self.app = app.test_client()
        self.app.testing = True

    def test_index_route(self):
        # 测试根路由
        response = self.app.get('/')
        self.assertEqual(response.status_code, 200)
        self.assertIn(b"ArgoCD Dashboard", response.data)
        self.assertIn(b"Python-flask project v2.", response.data)

    def test_api_mock_route(self):
        # 测试/api/mock路由
        response = self.app.get('/api/mock')
        self.assertEqual(response.status_code, 200)
        data = response.get_json()
        print(data)
#        self.assertEqual(data["message"], "Hi there, this app is running on eks/k8s cluster. change from test")

if __name__ == '__main__':
    unittest.main()
